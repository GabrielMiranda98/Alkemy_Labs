@model University.Models.ViewModels.AdminViewModel
@{
    ViewBag.Title = "Add administrator";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Add", "Admin", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationMessage("Error", new { @class = "text-danger" })
            @Html.LabelFor(d => d.User)
            @Html.TextBoxFor(d => d.User, new { @class = "form-control" })
            @Html.ValidationMessage("User", new { @class = "text-danger" }) <br />

            @Html.LabelFor(d => d.Password)
            @Html.PasswordFor(d => d.Password, new { @class = "form-control" })
            @Html.ValidationMessage("Password", new { @class = "text-danger" }) <br />

            @Html.LabelFor(d => d.ConfirmPassword)
            @Html.PasswordFor(d => d.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" }) <br />
            <div style="text-align:right">
                <input type="submit" name="btn btn-success" value="Save" />

            </div>
        }
    </div>

</div>
